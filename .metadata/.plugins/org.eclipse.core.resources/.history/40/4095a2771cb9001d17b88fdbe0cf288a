package hr.fer.oop.izdrkavanja.simple;

public class Zadatak1 {

	public static void main(String[] args) {
		
		int powOf10=10;
		double sum=0f;
		for(int i=0;i<1000000;i++) {
			sum+= (Math.pow(-1,i) / (2i+1.f));
			if(i==powOf10) {
				System.out.printf("%.10f",sum);
				powOf10*=10;
			}
		}
		
	}

}
