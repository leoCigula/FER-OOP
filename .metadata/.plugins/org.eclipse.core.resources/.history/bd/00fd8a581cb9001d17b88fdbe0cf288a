package hr.fer.oop.izdrkavanja.simple;

public class Zadatak1 {

	public static void main(String[] args) {
		
		int powOf10=10;
		int i;
		double sum=0f;
		for(int j=0;j<1 000 000;j++) {
			sum+= (Math.pow(-1,j) / (2i+1.f));
			if(i==powOf10) {
				System.out.printf("%.10f",sum);
				powOf10*=10;
			}
		}
		
	}

}
